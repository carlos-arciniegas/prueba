@{

    Layout = "~/Views/gestion_usuarios/_Layout.cshtml";
}

@model BOReserva.Models.gestion_usuarios.AgregarUsuario
@using (Html.BeginForm())
{
@Html.ValidationSummary() 

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-body">
                <h2 class="box-title">Agregar Usuario</h2>
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            &nbsp;
                            <div class="col-md-12">
                                <div class="col-xs-12">
                                    <label for="_correo">Inserte el Correo Electronico del usuario (<span style="color:red">*</span>):</label>
                                    @Html.TextBoxFor(c => c._correo, null, new
                                   {
                                       @class = "form-control",
                                       @placeholder = "abc@reserva.com",
                                       @id = "correoUsuario",
                                       required = "required",
                                       type = "email"
                                   })
                                </div>
                            </div>
                            <div>
                            &nbsp;
                            <div class="col-md-12">
                                <div class="col-xs-6">
                                    <label for="nombreUsuario">Inserte el Nombre del Usuario (<span style="color:red">*</span>):</label>
                                    @Html.TextBoxFor(c => c._nombre, null,
                                    new 
                                    {
                                        @class = "form-control", 
                                        @placeholder = "Pedro", 
                                        @id = "nombreUsuario", 
                                        required = "required",
                                        maxlength="50", 
                                        oninput="setCustomValidity('')", 
                                        oninvalid = "setCustomValidity('Campo obligatorio, solo se aceptan letras')",
                                        pattern = "^[a-zA-ZñÑáéíóúÁÉÍÓÚ]*$"
                                    })
                                </div>
                                    <div class="col-xs-6">
                                        <label for="apellidoUsuario">Inserte el Apellido del Usuario (<span style="color:red">*</span>):</label>
                                        @Html.TextBoxFor(c => c._apellido, null, new
                               {
                                   @class = "form-control",
                                   @placeholder = "Perez",
                                   @id = "nombreUsuario",
                                   required = "required",
                                   maxlength = "50",
                                   oninput = "setCustomValidity('')",
                                   oninvalid = "setCustomValidity('Campo obligatorio, solo se aceptan letras')",
                                   pattern = "^[a-zA-ZñÑáéíóúÁÉÍÓÚ]*$"
                               })
                                    </div>
                                </div>
                            </div>
                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <div class="col-xs-6">
                                        <label for="_correo">Inserte la contraseña del usuario (<span style="color:red">*</span>):</label>
                                        @Html.TextBoxFor(c => c._contraseña, null, new { @class = "form-control", @placeholder = "12345pepito", @id = "contraseñaUsuario", required = "required",
                                            oninvalid = "setCustomValidity('Campo obligatorio. De 6 a 12 caracteres. Debe contener al menos un digito y una letra. No puede contener caracteres especiales')",
                                            type = "password",
                                            oninput = "setCustomValidity('')",
                                            pattern = "(?!^[0-9]*$)(?!^[a-zA-Z]*$)^([a-zA-Z0-9]{6,12})$"
                               })
                                    </div>
                                    <div class="col-xs-6">
                                        <label for="nombreUsuario">Confirmar contraseña del usuario (<span style="color:red">*</span>):</label>
                                        @Html.TextBoxFor(c => c._confirmarContraseña, null, new { @class = "form-control", @placeholder = "12345pepito", @id = "confContraseña", required = "required",
                                            type = "password",
                                            oninput = "setCustomValidity('')",
                                            pattern = "(?!^[0-9]*$)(?!^[a-zA-Z]*$)^([a-zA-Z0-9]{6,12})$"
                                    })
                                    </div>
                                </div>
                              </div>
                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <div class="col-xs-6">
                                        <label for="_rol">Seleccione el rol del usuario (<span style="color:red">*</span>):</label>
                                        @Html.DropDownListFor(c => c._rol, new[] { new SelectListItem() { Text = "Administrador", Value = "1"}, new SelectListItem()
                                        { Text = "Cargador", Value = "2" } }, "Seleccione una opcion", new { @class = "form-control" })

                                    </div>
                                    <div class="col-xs-6">
                                        <label for="_activo">Estado del usuario (<span style="color:red">*</span>):</label>
                                        @Html.DropDownListFor(c => c._activo, new[] { new SelectListItem() { Text = "Activo", Value = "activo"}, new SelectListItem()
                                        { Text = "Inactivo", Value = "inactivo" } }, "Seleccione una opcion", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                                <div class="col-md-12" style="margin-top:10px;">
                                    <!--  <input type="button" value="Create" class="btn btn-success" onclick=" return confirm('¿Seguro que desea crear este usuario?');" /> -->
                                    <button type="submit" class="btn btn-success" value="Registrar" id="agregarUsuario"
                                            style="display:block; margin-left:auto; margin-right:auto;">
                                        Guardar
                                    </button>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</div>
    <script language="javascript">
        var password = document.getElementById("contraseñaUsuario")
        , confirm_password = document.getElementById("confContraseña");

        function validatePassword() {
            if (password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Las contraseñas no coinciden");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
    </script>
}

