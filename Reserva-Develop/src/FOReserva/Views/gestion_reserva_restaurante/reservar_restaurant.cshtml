@model FOReserva.Models.Restaurantes.CRestaurantModel
@{
    ViewBag.Title = "reservar_restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- FEATURED GRID -->


<div class="row">
    <div class="panel panel-default col-sm-5">
        <div class="panel-heading">
            <h2 class="panel-title">Reservar restaurante</h2>
        </div>
        <div class="panel-body center-block">

            <form class="validate  " action="php/contact.php" method="post" enctype="multipart/form-data" data-success="Sent! Thank you!" data-toastr-position="top-right">
                <div class="form-group">

                    <label>A nombre de: </label>
                    <input type="text" name="" value="" class="form-control" data-format="" data-lang="en" data-rtl="false" placeholder="Ingrese su nombre">
                </div>
                <div class="form-group">

                    <label>Fecha: </label>
                    <input type="text" name="contact[start_date]" value="" class="form-control datepicker required" data-format="yyyy-mm-dd" data-lang="en" data-rtl="false" placeholder="Selecciona la fecha">
                </div>
                <div class="form-group">
                    <label>Hora:</label>
                    <select name="contact[position]" class="form-control pointer required">
                        <option value="" selected>Selecciona la hora:</option>
                        <option value="">7:00</option>
                        <option value="">8:00</option>
                        <option value="">9:00</option>
                        <option value="">10:00</option>
                        <option value="">11:00</option>
                        <option value="">12:00</option>
                        <option value="">13:00</option>
                        <option value="">14:00</option>
                        <option value="">15:00</option>
                        <option value="">16:00</option>
                        <option value="">17:00</option>
                        <option value="">18:00</option>
                        <option value="">19:00</option>
                        <option value="">20:00</option>
                        <option value="">21:00</option>
                        <option value="">22:00</option>
                        <option value="">23:00</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Numero de personas:</label>
                    <input type="text" value="1" min="1" max="1000" class="form-control stepper">
                </div>
                <div class="text-center">
                    <a href="confirm_restaurantes.html" class="btn  btn-primary">Reservar</a>
                </div>
            </form>
        </div>

    </div>
 
    <div class="col-sm-7">
        <div class="relative">
            <div style="height: 443.6px;background-image: url('../Images/restaurant_generic.jpg');background-repeat: no-repeat;background-size: cover;">
                <div class="absolute text-left">
                    <h2>  <b>@Model.Name</b>  </h2>
                    <p style="color: #fff;">Madrid</p>
                    <p style="color: #fff;" class="font-lato margin-top-30 size-16 hidden-sm hidden-xs"><b>Dirección: </b> @Model.Addres</p>
                </div>
            </div>

        </div>

    </div>

</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Descripción</h2>
        </div>
        <div class="panel-body">
            @Model.Description
        </div>
    </div>
</div>
<!-- /FEATURED GRID -->
